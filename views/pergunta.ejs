<%- include('partials/head'); %>
<body>
    <%- include('partials/navbar'); %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <hr>

        <form method="POST" action="/responder/<%= pergunta.id%>">
           <h3>Responda</h3>

           <label for="corpo">Resposta</label>
           <textarea 
            name="corpo"
            placeholder="Digite sua resposta" 
            id="corpo" 
            cols="30" 
            rows="5" 
            class="form-control"
           ></textarea>
           <br>

           <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>

        <h3>Respostas</h3>
        <br>
        <% respostas.map( resposta => {%>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>          
            <br>
        <% }) %>

    </div>
    <br>
</body>
<%- include('partials/scripts'); %>

